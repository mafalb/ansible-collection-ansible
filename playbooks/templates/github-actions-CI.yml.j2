# vim: set ft=yaml ts=2 expandtab:
---

name: CI

on:

  push:
    branches:
    - '**'
    tags-ignore:
    - '*'

  schedule:
    - cron: '40 11 * * 6'

jobs:

  CI:

    runs-on: ubuntu-20.04

    strategy:

      fail-fast: false

      matrix:

        target:
        - centos7
        - centos8
        - ubuntu-16.04
        - ubuntu-18.04
        - ubuntu-20.04
        - fedora31
        - fedora32
        - fedora33
        - debian9
        - debian10

        ansible_version:
        - '2.9'
        - '2.10'

        include:

        - target: centos7
          distribution: centos
          version: 7

        - target: centos8
          distribution: centos
          version: 8

        - target: ubuntu-16.04
          distribution: ubuntu
          version: xenial

        - target: ubuntu-18.04
          distribution: ubuntu
          version: bionic

        - target: ubuntu-20.04
          distribution: ubuntu
          version: focal

        - target: fedora31
          distribution: fedora
          version: 31

        - target: fedora32
          distribution: fedora
          version: 32

        - target: fedora33
          distribution: fedora
          version: 33

        - target: debian9
          distribution: debian
          version: stretch

        - target: debian10
          distribution: debian
          version: buster

    env:
      {% raw %}
      ANSIBLE_VERSION: ${{ matrix.ansible_version }}
      CI_CONTAINER_IMAGE: ${{ matrix.distribution }}
      CI_CONTAINER_TAG: ${{ matrix.version }}
      PY_COLORS: 1
      ANSIBLE_FORCE_COLOR: 1
      {% endraw %}

    defaults:
      run:
        working-directory: ansible_collections/mafalb/{{ collection_name }}

    steps:

    - name: checkout collection ansible
      uses: actions/checkout@v2
      with:
        path: ansible_collections/mafalb/{{ collection_name }}

    - name: install dependencies
      run: ansible-galaxy collection install -r molecule/requirements.yml

    - name: install molecule
      run: ansible-playbook -D molecule/install_molecule.yml -e molecule_ansible_version={% raw %}${{ matrix.ansible_version }}{% endraw %}


    - name: check ansible version
      run: |
        source ~/.virtualenvs/molecule/bin/activate
        ansible --version | grep "^ansible {% raw %}${{ matrix.ansible_version }}{% endraw %}"

    - name: molecule tests
      run: |
        source ~/.virtualenvs/molecule/bin/activate
        molecule test

...
